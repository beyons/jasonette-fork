{
  "$jason": {
    "head": {
      "title": "Render dynamic news details page with mixin data",
      "actions": {
        "$load": {
          "type": "$render"
        }
      },
      "templates": {
        "body": {
          "style": {
            "background": "{{$global.background}}",
            "color": "{{$global.fontColor}}",
            "border": "none",
            "align": "center"
          },
          "header": {
            "title": "{{$params.titreArticle.substring(0,27)+'...'}}",
            "style": {
              "font": "Roboto",
              "size": 22,
              "background": "#2d3436",
              "color": "white"
            },
            "leftButton": {
              "text": "â€¹",
              "style": {
                "size": 45,
                "width": 20,
                "minWidth": 90,
                "color": "white",
                "background": "#2d3436"
              },
              "action": {
                "type": "$back"
              }
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "image",
                  "url": "{{$params.imageArticle}}",
                  "style": {
                    "width": "100%"
                  }
                },
                {
                  "type": "label",
                  "text": "{{$params.titreArticle}}",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 20,
                    "color": "{{$global.fontColor}}",
                    "padding_left": 20,
                    "padding_right": 20,
                    "padding_top": 20,
                    "padding_bottom": 20
                  }
                },
                {
                  "type": "horizontal",
                  "style":{
                    "background": "#ecf0f1",
                    "align": "left"
                  },
                  "components": [
                    {
                      "type": "button",
                      "url": "file://images/phone.png",
                      "style": {
                        "width": 50,
                        "height": 50,
                        "background": "rgba(255,255,255,0)",
                        "color": "#ffffff",
                        "elevation": 20
                      },
                      "action": {
                        "type": "$href",
                        "options": {
                          "url": "tel:{{$params.phoneArticle}}",
                          "view": "app"
                        }
                      }
                    },
                    {
                      "type": "button",
                      "url": "file://images/email.png",
                      "style": {
                        "width": 50,
                        "height": 50,
                        "background": "rgba(0,0,0,0)",
                        "color": "#ffffff",
                        "elevation": 20
                      },
                      "action": {
                        "type": "$href",
                        "options": {
                          "url": "mailto:{{$params.emailArticle}}?subject=Contact",
                          "view": "app"
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "label",
                  "text": "{{$params.fullArticle}}",
                  "style": {
                    "font": "Roboto",
                    "color": "{{$global.fontColor}}",
                    "size": 16,
                    "padding_left": 20,
                    "padding_right": 20
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}


{
  "$jason": {
    "head": {
      "title": "Password recovery",
      "description": "Recover your password",
      "agents": {
        "recup": {
          "url": "file://agent/firebase.html"
        }
      },
      "styles": {
        "caption": {
          "font": "Roboto",
          "size": 13,
          "align": "center",
          "spacing": 15
        }
      }
    },
    "body": {
      "style": {
        "border": "none",
        "background": {
          "type": "html",
          "url": "file://images/register.html"
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "align": "center"
              },
              "components": [
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "label",
                  "text": "Récupération mot de passe",
                  "style": {
                    "size": 27,
                    "color": "#ffffff",
                    "font": "Roboto",
                    "padding": 10,
                    "align": "center",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 90
                  }
                },
                {
                  "type": "label",
                  "text": "Numéro de téléphone",
                  "style": {
                    "size": 17,
                    "color": "#ffffff",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "login",
                  "keyborad": "phone",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70% - 15",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "size": 15
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 50
                  }
                },
                {
                  "type": "button",
                  "text": "Récupération",
                  "style": {
                    "width": "35% - 10",
                    "height": 50,
                    "background": "#DC0000",
                    "color": "#ffffff",
                    "font": "Roboto-Bold",
                    "corner_radius": 35,
                    "size": 15
                  },
                  "action": {
                    "type": "$agent.request",
                    "options": {
                      "id": "recup",
                      "method": "firebaseGet",
                      "params": ["https://fir-db-63961.firebaseio.com/users.json?auth=IuGbhgJJoTNSURmB8DBjWIpMgPiSq85SQ8rubWbw","{{$get.login}}"]
                    },
                    "success": {
                      "type": "$util.alert",
                      "options": {
                        "title": "Résultat",
                        "description": "Votre email est le suivant : {{$jason}}"
                      }
                    },
                    "error": {
                      "type": "$util.toast",
                      "options": {
                        "text": "Impossible de joindre l'agent"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 90
                  }
                }
              ]
            }
          ]
        }
      ],
      "layers": [
        {
          "type": "button",
          "url": "file://images/back.png",
          "style": {
            "width": 60,
            "height": 60,
            "right": 20,
            "elevation": 20,
            "bottom": 20,
            "background": "#f1c40f",
            "color": "#ffffff",
            "font": "Roboto",
            "size": 30,
            "corner_radius": 75
          },
          "action": {
            "type": "$back"
          }
        }
      ]
    }
  }
}
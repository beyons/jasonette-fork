{
  "$jason": {
    "head": {
      "title": "Render dynamic announcement details page",
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$pull": {
          "type": "$back"
        }
      },
      "templates": {
        "body": {
          "style": {
            "background": "#ffffff",
            "border": "none",
            "align": "center"
          },
          "header": {
            "title": "{{$params.title.substring(0,27)+'...'}}",
            "style": {
              "font": "Roboto",
              "size": 22,
              "background": "#2d3436",
              "color": "white"
            },
            "leftButton": {
              "text": "‹",
              "style": {
                "size": 75,
                "width": 20,
                "minWidth": 90,
                "color": "white",
                "background": "#2d3436"
              },
              "action": {
                "type": "$back"
              }
            }
          },
          "sections": [
            {
              "type": "horizontal",
              "items": [
                {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "image",
                      "class": "carousel_img",
                      "url": "{{$params.image1}}",
                      "style": {
                        "width": "100%"
                      }
                    }
                  ]
                },
                {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "image",
                      "class": "carousel_img",
                      "url": "{{$params.image2}}",
                      "style": {
                        "width": "100%"
                      }
                    }
                  ]
                },
                {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "image",
                      "class": "carousel_img",
                      "url": "{{$params.image3}}",
                      "style": {
                        "width": "100%"
                      }
                    }
                  ]
                },
                {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "image",
                      "class": "carousel_img",
                      "url": "{{$params.image4}}",
                      "style": {
                        "width": "100%"
                      }
                    }
                  ]
                },
                {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "image",
                      "class": "carousel_img",
                      "url": "{{$params.image5}}",
                      "style": {
                        "width": "100%"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "header": {
                "type": "horizontal",
                "style": {
                  "background": "#2d3436",
                  "align": "center",
                  "spacing": 10
                },
                "components": [
                  {
                    "type": "label",
                    "text": "Information(s) complémentaire(s)",
                    "style": {
                      "color": "#ffffff",
                      "font": "Roboto-bold"
                    }
                  }
                ]
              },
              "items": [
                {
                  "type": "horizontal",
                  "style": {
                    "spacing": 10
                  },
                  "components": [
                    {
                      "type": "vertical",
                      "components": [
                        {
                          "type": "label",
                          "text": "{{(Number.parseFloat($params.price).toFixed(2).replace(/\\d(?=(\\d{3})+\\.)/g, '$&,'))}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 20,
                            "color": "#e74c3c"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{$params.location}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{$params.circulation}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "horizontal",
                  "style": {
                    "spacing": 10
                  },
                  "components": [
                    {
                      "type": "image",
                      "url": "file://images/icon.png",
                      "style": {
                        "width": 10
                      }
                    },
                    {
                      "type": "vertical",
                      "components": [
                        {
                          "type": "label",
                          "text": "Kilométrage : {{$params.km}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        },
                        {
                          "type": "label",
                          "text": "Couleur : {{$params.couleur}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        },
                        {
                          "type": "label",
                          "text": "Garantie : {{$params.garantie}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        },
                        {
                          "type": "label",
                          "text": "Puissance : {{$params.puissance}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        },
                        {
                          "type": "label",
                          "text": "DIN : {{$params.din}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "horizontal",
                  "style": {
                    "spacing": 10
                  },
                  "components": [
                    {
                      "type": "image",
                      "url": "file://images/icon.png",
                      "style": {
                        "width": 10
                      }
                    },
                    {
                      "type": "vertical",
                      "components": [
                        {
                          "type": "label",
                          "text": "Premiere main : {{$params.premieremain}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "horizontal",
                  "style": {
                    "spacing": 10
                  },
                  "components": [
                    {
                      "type": "image",
                      "url": "file://images/icon.png",
                      "style": {
                        "width": 10
                      }
                    },
                    {
                      "type": "vertical",
                      "components": [
                        {
                          "type": "label",
                          "text": "Accessoire : {{$params.accessoir1}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        },
                        {
                          "type": "label",
                          "text": "Accessoire : {{$params.accessoir2}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        },
                        {
                          "type": "label",
                          "text": "Accessoire : {{$params.accessoir3}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        },
                        {
                          "type": "label",
                          "text": "Accessoire : {{$params.accessoir4}}",
                          "style": {
                            "font": "Roboto-bold",
                            "size": 15,
                            "color": "#2c3e50"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}


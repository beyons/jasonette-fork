{
  "$jason": {
    "head": {
      "title": "Render dynamically Contact page for IPC Apps",
      "actions": {
        "$load": {
          "type": "$render"
        }
      },
      "templates": {
        "body": {
          "style": {
            "background":  "{{$global.background}}",
            "border": "none",
            "color":  "{{$global.fontColor}}",
            "align": "center"
          },
          "header": {
            "title": "Contact",
            "style": {
              "font": "Roboto",
              "size": 25,
              "background": "#2d3436",
              "color": "white"
            },
            "leftButton": {
              "text": "retour",
              "style": {
                "size": 45,
                "width": 20,
                "minWidth": 90,
                "color": "white",
                "background": "#2d3436"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "file://ui/home.json",
                  "transition": "push",
                  "animation": "pushleft",
                  "view": "jason"
                }
              }
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "map",
                  "region": {
                    "coord": "36.845790, 10.321869",
                    "width": "100%",
                    "height": "100%"
                  },
                  "pins": [{
                    "title": "Institut Poincaré",
                    "description": "71721221",
                    "coord": "36.845790,10.321869",
                    "style": {
                      "selected": "true"
                    }
                  }],
                  "style": {
                    "width": "100%",
                    "height": "350",
                    "type": "satellite_flyover"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 30
                  }
                },
                {
                  "type": "label",
                  "text": "Adresse",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "horizontal",
                  "style": {
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "image",
                      "url": "file://images/locations.png",
                      "style": {
                        "width": 30,
                        "height": 30
                      }
                    },
                    {
                      "type": "label",
                      "text": "carthage Byrsa, 2016 Carthage, Tunisia",
                      "style": {
                        "font": "Roboto",
                        "size": 15,
                        "color": "{{$global.fontColor}}",
                        "padding": 10
                      }
                    }
                  ]
                },
                {
                  "type": "label",
                  "text": "Téléphone",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "horizontal",
                  "style": {
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "image",
                      "url": "file://images/telephones.png",
                      "style": {
                        "width": 30,
                        "height": 30
                      }
                    },
                    {
                      "type": "label",
                      "text": "71721221",
                      "style": {
                        "font": "Roboto",
                        "size": 15,
                        "color": "#e74c3c",
                        "padding": 10
                      },
                      "action": {
                        "type": "$href",
                        "options": {
                          "url": "tel:71721221",
                          "view": "app"
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "label",
                  "text": "Email",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "horizontal",
                  "style": {
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "image",
                      "url": "file://images/mails.png",
                      "style": {
                        "width": 30,
                        "height": 30
                      }
                    },
                    {
                      "type": "label",
                      "text": "institutpoincare@gmail.com",
                      "style": {
                        "font": "Roboto",
                        "size": 15,
                        "color": "#e74c3c",
                        "padding": 10
                      },
                      "action": {
                        "type": "$href",
                        "options": {
                          "url": "mailto:institutpoincare@gmail.com?subject=Contact",
                          "view": "app"
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "space",
                  "style": {
                    "height": 80
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}
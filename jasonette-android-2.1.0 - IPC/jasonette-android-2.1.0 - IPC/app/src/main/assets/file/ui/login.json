{
  "$jason": {
    "head": {
      "title": "Login to your account for IPC Apps",
      "description": "Login to your account",
      "agents": {
        "auth": {
          "url": "file://agent/agent.html"
        },
        "checkingConnected": {
          "url": "file://agent/connected.html"
        },
        "localNotificationChecker": {
          "url": "file://agent/agent.html"
        }
      },
      "actions" : {
        "$load": {
          "type": "$agent.request",
          "options": {
            "id": "localNotificationChecker",
            "method": "checkNotification",
            "params": [
              "{{$cache.state}}"
            ]
          }
        },
        "nextPage": {
          "type": "$global.set",
          "options": {
            "nom": "{{$global.nm}}",
            "prenom": "{{$global.prn}}",
            "background": "#ffffff",
            "fontColor": "#2c3e50",
            "animation": "hide",
            "darkMode": false
          },
          "success": {
            "type": "$href",
            "options": {
              "url": "file://ui/home.json",
              "transition": "push",
              "animation": "pushleft",
              "view": "jason"
            }
          }
        },
        "loginError": {
          "type": "$util.alert",
          "options": {
            "title": "Authentification",
            "description": "Veuillez vérifier vos paramètres d'authentification"
          }
        },
        "invalidMail": {
          "type": "$util.alert",
          "options": {
            "title": "Adresse mail",
            "description": "Le format de votre Email est invalide"
          }
        },
        "connected": {
          "type": "$util.toast",
          "options": {
            "text": "Utilisateur déja inscrit !"
          }
        },
        "notConnected": {
          "type": "$href",
          "options": {
            "url": "file://ui/register.json",
            "transition": "push",
            "animation": "pushleft",
            "view": "jason"
          }
        },
        "showLocalNotification": {
          "type": "$cache.set",
          "options": {
            "state": true
          },
          "success": {
            "type": "$util.localNotification",
            "options": {
              "title": "Poincare.tn",
              "text": "Bienvenue sur l'application mobile de l'institut poincare de carthage, Lieu d'apprentissage par excellence."
            }
          }
        }
      },
      "styles": {
        "caption": {
          "font": "Roboto",
          "size": 13,
          "align": "center",
          "spacing": 15
        }
      }
    },
    "body": {
      "style": {
        "border": "none",
        "background": {
          "type": "html",
          "url": "file://images/login.html"
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "align": "center"
              },
              "components": [
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "label",
                  "text": "BIENVENUE,",
                  "style": {
                    "size": 27,
                    "color": "#ffffff",
                    "font": "Courier-Bold",
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "label",
                  "text": "Content de vous revoir.",
                  "style": {
                    "size": 23,
                    "color": "#ffffff",
                    "font": "HelveticaNeue-Bold",
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 210
                  }
                },
                {
                  "type": "label",
                  "text": "Votre login",
                  "style": {
                    "size": 17,
                    "color": "#ffffff",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "login",
                  "keyborad": "email",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70% - 15",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "size": 15
                  }
                },
                {
                  "type": "label",
                  "text": "Votre mot de passe",
                  "style": {
                    "size": 17,
                    "color": "#ffffff",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "password",
                  "keyborad": "text",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70% - 15",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "secure": true,
                    "size": 15
                  },
                  "action": {
                    "store": {
                      "type": "$global.set",
                      "options": {
                        "pwd": "{{$get.password}}"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 50
                  }
                },
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "space",
                      "style": {
                        "width": "15%"
                      }
                    },
                    {
                      "type": "button",
                      "text": "Login",
                      "style": {
                        "width": "35% - 10",
                        "height": 50,
                        "background": "#DC0000",
                        "color": "#ffffff",
                        "font": "Roboto-Bold",
                        "corner_radius": 35,
                        "size": 15
                      },
                      "action": {
                        "type": "$agent.request",
                        "options": {
                          "id": "auth",
                          "method": "validateEmail",
                          "params": ["{{$get.login}}", "{{$get.password}}", "{{$global.email}}", "{{$global.motdepasse}}","{{$global.token}}"]
                        },
                        "error": {
                          "type": "$util.toast",
                          "options": {
                            "text": "Erreur! veuillez reessayer."
                          }
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "10"
                      }
                    },
                    {
                      "type": "button",
                      "url": "file://images/facebook-login.png",
                      "style": {
                        "width": "35% - 10",
                        "height": 50,
                        "background": "#3B4DB3",
                        "color": "#ffffff",
                        "font": "Roboto-Bold",
                        "corner_radius": 35,
                        "size": 15
                      },
                      "action": {
                        "type": "$util.facebookAuth",
                        "options": {
                          "APP_ID": "633565873881541",
                          "REDIRECT_URL": "https://www.facebook.com/connect/login_success.html"
                        },
                        "success": {
                          "type": "$global.set",
                          "options": {
                            "background": "#ffffff",
                            "fontColor": "#2c3e50",
                            "animation": "hide",
                            "darkMode": false
                          },
                          "success": {
                            "type": "$global.set",
                            "options": {
                              "nom": "{{Math.random().toString(36).slice(2)}}",
                              "prenom": "Anonymous "
                            },
                            "success": {
                              "type": "$href",
                              "options": {
                                "url": "file://ui/home.json",
                                "transition": "push",
                                "animation": "pushleft",
                                "view": "jason"
                              }
                            }
                          }
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "15%"
                      }
                    }
                  ]
                },
                {
                  "type": "space",
                  "style": {
                    "height": 30
                  }
                },
                {
                  "type": "label",
                  "text": "Nouveau utilisateur ? \nInscrivez vous maintenant",
                  "style": {
                    "size": 15,
                    "color": "#ffffff",
                    "font": "Roboto",
                    "padding": 10,
                    "align": "center",
                    "fontWeight": "bold"
                  },
                  "action": {
                    "type": "$agent.request",
                    "options": {
                      "id": "checkingConnected",
                      "method": "checkingConnected",
                      "params": ["{{$global.email}}"]
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 5
                  }
                },
                {
                  "type": "label",
                  "text": "Mot de passe oublié",
                  "style": {
                    "size": 15,
                    "color": "#DC0000",
                    "font": "Roboto",
                    "padding": 10,
                    "align": "center",
                    "fontWeight": "bold"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "file://ui/password_recover.json",
                      "transition": "modal",
                      "view": "jason"
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 90
                  }
                }
              ]
            }
          ]
        }
      ],
      "layers": [
        {
          "type": "button",
          "url": "file://images/add.png",
          "style": {
            "width": 60,
            "height": 60,
            "right": 20,
            "bottom": 20,
            "background": "#B08739",
            "color": "#ffffff",
            "font": "Roboto",
            "size": 30,
            "elevation": 20,
            "corner_radius": 75
          },
          "action": {
            "type": "$agent.request",
            "options": {
              "id": "checkingConnected",
              "method": "checkingConnected",
              "params": ["{{$global.email}}"]
            }
          }
        }
      ]
    }
  }
}
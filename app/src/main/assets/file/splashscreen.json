{
  "$jason": {
    "head": {
      "title": "Splashscreen",
      "description": "Splashscreen For First application",
      "styles": {
        "caption": {
          "font": "Roboto",
          "size": 13,
          "align": "center",
          "spacing": 15
        }
      },
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "https://www.google.fr",
            "dataType": "html"
          },
          "success": {
            "type": "$timer.start",
            "options": {
              "interval": "3",
              "name": "timer1",
              "action": {
                "type": "$href",
                "options": {
                  "url": "file://ui/login.json",
                  "transition": "push",
                  "animation": "direct",
                  "view": "jason"
                }
              },
              "success": {
                "type": "$ok",
                "options": {
                  "selection": "Splashscreen"
                }
              }
            }
          },
          "error": {
            "type": "$util.alert",
            "options": {
              "title": "Erreur !!!",
              "description": "Veuillez verifier votre connexion !"
            }
          }
        }
      }
    },
    "body": {
      "style": {
        "background": "#ffffff",
        "border": "none"
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "align": "center"
              },
              "components": [
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "image",
                  "url": "file://images/logo.png",
                  "style": {
                    "width": 300,
                    "height": 300,
                    "align": "center"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 20
                  }
                },
                {
                  "type": "label",
                  "text": "CHARGEMENT ...",
                  "style": {
                    "size": 15,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "align": "center",
                    "fontWeight": "bold"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
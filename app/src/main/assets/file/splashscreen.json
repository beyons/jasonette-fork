{
  "$jason": {
    "head": {
      "title": "Splashscreen",
      "description": "Splashscreen For Jasonelle application",
      "styles": {
        "caption": {
          "font": "Roboto",
          "size": "13",
          "align": "center",
          "spacing": "15"
        }
      },
      "actions": {
          "$load": {
          "type": "$network.request",
          "options": {
            "url": "https://news.ycombinator.com/newest",
            "dataType": "html"
          },
          "success": {
              "type": "$timer.start",
              "options": {
                "interval": "3",
                "name": "timer1",
                "action": {
                  "type": "$href",
                  "options": {
                    "url": "file://login.json",
                    "transition": "replace",
                    "view": "jason",
                    "preload": {
                      "background": "#85B0A6",
                      "layers": [{
                        "type": "image",
                        "url": "file://images/loading.gif",
                        "style": {
                          "top": "50%-100",
                          "left": "50%-100",
                          "width": "200",
                          "height": "200"
                        }
                      }]
                    }
                  }
                },
                "success": {
                  "type": "$ok",
                  "options": {
                    "selection": "Splashscreen"
                  }
                }
              }
          },
          "error": {
            "type": "$util.alert",
            "options": {
              "title": "Erreur !!!",
              "description": "Veuillez verifier votre connexion !"
            }
          }
        }
      }
    },
    "body": {
      "style": {
        "background": "#85B0A6",
        "border": "none"
      },
      "layers": [
        {
          "type": "image",
          "url": "file://images/loading.gif",
          "style": {
            "width": "400",
            "height": "400",
            "top": "50%-200",
            "left": "50%-200"
          }
        }
      ]
    }
  }
}
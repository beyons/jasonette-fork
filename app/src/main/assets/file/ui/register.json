{
  "$jason": {
    "head": {
      "title": "Register your account",
      "description": "Register your account locally in mobile key/value database",
      "agents": {
        "getTime": {
          "url": "file://agent/agent.html"
        }
      },
      "styles": {
        "caption": {
          "font": "Roboto",
          "size": 13,
          "align": "center",
          "spacing": 15
        }
      }
    },
    "body": {
      "style": {
        "border": "none"
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "align": "center"
              },
              "components": [
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "button",
                  "url": "file://images/attaching.png",
                  "style": {
                    "width": 60,
                    "height": 60,
                    "right": 40,
                    "bottom": 30,
                    "background": "#fdcb6e",
                    "color": "#ffffff",
                    "font": "Roboto",
                    "size": 30,
                    "corner_radius": 75
                  },
                  "action": {
                    "type": "$media.picker",
                    "options": {
                      "edit": "true",
                      "type": "photo"
                    },
                    "success": {
                      "type": "$util.alert",
                      "options": {
                        "title": "Selected {{$jason['content_type']}} at",
                        "description": "{{$jason.file_url}}"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 30
                  }
                },
                {
                  "type": "label",
                  "text": "Votre nom",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "nom",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "size": 15
                  }
                },
                {
                  "type": "label",
                  "text": "Votre prénom",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "prenom",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "size": 15
                  }
                },
                {
                  "type": "label",
                  "text": "Votre adresse",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "adresse",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "size": 15
                  }
                },
                {
                  "type": "label",
                  "text": "Votre téléphone",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "phone",
                  "keyboard": "phone",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "size": 15
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 20
                  }
                },
                {
                  "type": "horizontal",
                  "style":{
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "Date de naissance",
                      "style": {
                        "size": 17,
                        "color": "#2c3e50",
                        "font": "Roboto",
                        "padding": 10,
                        "width": "70% - 30",
                        "align": "left",
                        "fontWeight": "bold"
                      }
                    },
                    {
                      "type": "image",
                      "url": "file://images/calendars.png",
                      "style": {
                        "width": 30,
                        "height": 30,
                        "align": "center"
                      },
                      "action": {
                        "type": "$util.datepicker",
                        "options": {
                          "title": "Birthday date",
                          "description": "Just pick one"
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "space",
                  "style": {
                    "height": 20
                  }
                },
                {
                  "type": "label",
                  "text": "Présentation",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textarea",
                  "name": "synopsis",
                  "placeholder": "",
                  "value": "",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#dfe6e9",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "height": 190,
                    "padding": 15,
                    "corner_radius": 18,
                    "size": 15
                  }
                },
                {
                  "type": "label",
                  "text": "Votre login",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "login",
                  "keyboard": "email",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "size": 15
                  }
                },
                {
                  "type": "label",
                  "text": "Votre mot de passe",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "password",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "secure": true,
                    "size": 15
                  },
                  "action": {
                    "store": {
                      "type": "$global.set",
                      "options": {
                        "pwd": "{{$get.password}}"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "button",
                  "text": "Enregistrement",
                  "style": {
                    "width": "70%",
                    "height": 50,
                    "background": "#ff6b6b",
                    "color": "#ffffff",
                    "font": "Roboto",
                    "corner_radius": 35,
                    "size": 15
                  },
                  "action": {
                    "type": "$global.set",
                    "options": {
                      "nom": "{{$get.nom}}",
                      "prenom": "{{$get.prenom}}",
                      "adresse": "{{$get.adresse.replace(/\\s/g, \"_\")}}",
                      "phone": "{{$get.phone}}",
                      "birthday": "{{(new Date(parseInt($jason.value)*1000)).toString()}}",
                      "synopsis": "{{$get.synopsis.replace(/\\s/g, \"_\")}}",
                      "login": "{{$get.login}}",
                      "motdepasse": "{{$get.password}}",
                      "image": "{{$jason.file_url}}"
                    },
                    "success": {
                      "type": "$util.toast",
                      "options": {
                        "text": "Inscription réussie !"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                }
              ]
            }
          ]
        }
      ],
      "layers": [
        {
          "type": "button",
          "url": "file://images/back.png",
          "style": {
            "width": 60,
            "height": 60,
            "right": 20,
            "bottom": 20,
            "background": "#3498db",
            "color": "#ffffff",
            "font": "Roboto",
            "size": 30,
            "corner_radius": 75
          },
          "action": {
            "type": "$href",
            "options": {
              "url": "file://ui/login.json",
              "transition": "push",
              "animation": "direct",
              "view": "jason"
            }
          },
          "success": {
            "type": "$ok"
          }
        }
      ]
    }
  }
}
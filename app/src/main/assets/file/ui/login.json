{
  "$jason": {
    "head": {
      "title": "Login to your account",
      "description": "Login to your account",
      "agents": {
        "auth": {
          "url": "file://agent/agent.html"
        }
      },
      "actions" : {
        "pageSuivante": {
          "type": "$global.set",
          "options": {
            "background": "#ffffff",
            "fontColor": "#2c3e50"
          },
          "success": {
            "type": "$href",
            "options": {
              "url": "file://ui/home.json",
              "transition": "push",
              "animation": "pushleft",
              "view": "jason"
            }
          }
        },
        "erreurLogin": {
          "type": "$util.alert",
          "options": {
            "title": "Authentification",
            "description": "Veuillez vérifier vos paramètres d'authentification"
          }
        },
        "mailInvalide": {
          "type": "$util.alert",
          "options": {
            "title": "Adresse mail",
            "description": "Le format de votre Email est invalide"
          }
        }
      },
      "styles": {
        "caption": {
          "font": "Roboto",
          "size": 13,
          "align": "center",
          "spacing": 15
        }
      }
    },
    "body": {
      "style": {
        "border": "none",
        "background": {
          "type": "html",
          "text": "<html><style>body {  background: #fff;}.darker {position: absolute;top: 0;left: 0;width: 100%;padding-top: 50%;background: #e74c3c;overflow: hidden;}.darker::after {content: '';position: absolute;top: 0;left: 0;width: 100%;height: 100%;background: white;transform: skewY(26.5deg);transform-origin: left top;}</style><div class=\"darker\"></div><div style='background:#e74c3c;width:7px;height:100%;position:fixed;right:0;top:0;bottom:0'></div></html>"
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "align": "center"
              },
              "components": [
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "label",
                  "text": "Login to your account",
                  "style": {
                    "size": 27,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "align": "center",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "label",
                  "text": "Votre login",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "login",
                  "keyborad": "email",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70% - 15",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "size": 15
                  }
                },
                {
                  "type": "label",
                  "text": "Votre mot de passe",
                  "style": {
                    "size": 17,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "width": "70%",
                    "align": "left",
                    "fontWeight": "bold"
                  }
                },
                {
                  "type": "textfield",
                  "name": "password",
                  "keyborad": "text",
                  "style": {
                    "hintColor": "#2c3e50",
                    "borderColor": "#dfe6e9",
                    "background": "#ffffff",
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70% - 15",
                    "height": 50,
                    "padding": 15,
                    "corner_radius": 35,
                    "secure": true,
                    "size": 15
                  },
                  "action": {
                    "store": {
                      "type": "$global.set",
                      "options": {
                        "pwd": "{{$get.password}}"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 50
                  }
                },
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "space",
                      "style": {
                        "width": "15%"
                      }
                    },
                    {
                      "type": "button",
                      "text": "Login",
                      "style": {
                        "width": "35% - 10",
                        "height": 50,
                        "background": "#DC0000",
                        "color": "#ffffff",
                        "font": "Roboto-Bold",
                        "corner_radius": 35,
                        "size": 15
                      },
                      "action": {
                        "type": "$agent.request",
                        "options": {
                          "id": "auth",
                          "method": "validateEmail",
                          "params": ["{{$get.login}}", "{{$get.password}}", "{{$global.email}}", "{{$global.motdepasse}}"]
                        },
                        "error": {
                          "type": "$util.toast",
                          "options": {
                            "text": "Impossible de joindre l'agent"
                          }
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "10"
                      }
                    },
                    {
                      "type": "button",
                      "url": "file://images/facebook-login.png",
                      "style": {
                        "width": "35% - 10",
                        "height": 50,
                        "background": "#3B4DB3",
                        "color": "#ffffff",
                        "font": "Roboto-Bold",
                        "corner_radius": 35,
                        "size": 15
                      },
                      "action": {
                        "type": "$util.facebookAuth",
                        "options": {
                          "APP_ID": "633565873881541",
                          "REDIRECT_URL": "https://www.facebook.com/connect/login_success.html"
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "15%"
                      }
                    }
                  ]
                },
                {
                  "type": "space",
                  "style": {
                    "height": 40
                  }
                },
                {
                  "type": "label",
                  "text": "Nouveau utilisateur ? \nInscrivez vous maintenant",
                  "style": {
                    "size": 15,
                    "color": "#2c3e50",
                    "font": "Roboto",
                    "padding": 10,
                    "align": "center",
                    "fontWeight": "bold"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "file://ui/register.json",
                      "transition": "push",
                      "animation": "pushleft",
                      "view": "jason"
                    }
                  }
                }
              ]
            }
          ]
        }
      ],
      "layers": [
        {
          "type": "button",
          "url": "file://images/add.png",
          "style": {
            "width": 60,
            "height": 60,
            "right": 20,
            "bottom": 20,
            "background": "#e74c3c",
            "color": "#ffffff",
            "font": "Roboto",
            "size": 30,
            "elevation": 20,
            "corner_radius": 75
          },
          "action": {
            "type": "$href",
            "options": {
              "url": "file://ui/register.json",
              "transition": "push",
              "animation": "pushleft",
              "view": "jason"
            }
          },
          "success": {
            "type": "$ok"
          }
        }
      ]
    }
  }
}
{
  "$jason": {
    "head": {
      "title": "Render dynamic main page",
      "actions": {
        "$load": {
          "type": "$render"
        }
      },
      "templates": {
        "body": {
          "style": {
            "background": "#ffffff",
            "border": "none",
            "align": "center"
          },
          "header": {
            "search": {
              "name": "query_text",
              "placeholder": "Que recherchez-vous ?",
              "style": {
                "background": "#6c5ce7",
                "color": "white"
              }
            },
            "title": "Ã€ propos",
            "style": {
              "font": "Roboto",
              "size": 25,
              "background": "#6c5ce7",
              "color": "white"
            },
            "menu": {
              "image": "file://images/hamburger.png",
              "style": {
                "color": "white"
              }
            },
            "leftButton": {
              "text": "<",
              "style": {
                "size": 65,
                "width": 20,
                "minWidth": 90,
                "color": "white",
                "background": "#6c5ce7"
              }
            },
            "action": {
              "type": "$util.alert",
              "options": {
                "title": "Basic Alert",
                "description": "I'm a basic alert. I simply display an alert that needs to be dismissed before moving forward"
              }
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "horizontal",
                  "style":{
                    "background": "#6c5ce7",
                    "color": "white",
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "space",
                      "style": {
                        "width": "12%",
                        "height": 120
                      }
                    },
                    {
                      "type": "image",
                      "url": "https://www.cregybad.org/wp-content/uploads/2017/10/user.png",
                      "style": {
                        "width": 90,
                        "height": 90,
                        "corner_radius": "100"
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": 50
                      }
                    },
                    {
                      "type": "vertical",
                      "components": [
                        {
                          "type": "label",
                          "text": "{{$global.nom +' '+ $global.prenom}}",
                          "style": {
                            "font": "Avenir",
                            "size": 26,
                            "color": "white",
                            "padding": 5,
                            "fontWeight": "bold"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{$global.adresse.replace(/_/g, ' ')}}",
                          "style": {
                            "font": "Avenir",
                            "size": 16,
                            "color": "white",
                            "padding": 5
                          }
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "horizontal",
                  "style":{
                    "background": "#6c5ce7",
                    "align": "right"
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "{{$global.phone}}",
                      "style": {
                        "font": "Avenir",
                        "size": 16,
                        "color": "white",
                        "padding": 12,
                        "fontWeight": "bold"
                      }
                    },
                    {
                      "type": "image",
                      "url": "file://images/calls.png",
                      "style": {
                        "width": 50,
                        "height": 50,
                        "corner_radius": 100
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": 10
                      }
                    },
                    {
                      "type": "image",
                      "url": "file://images/mail.png",
                      "style": {
                        "width": 50,
                        "height": 50,
                        "corner_radius": 100
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "12%"
                      }
                    }
                  ]
                },
                {
                  "type": "map",
                  "region": {
                    "coord": "36.88222643648652, 10.324887022337078",
                    "width": "100",
                    "height": "100"
                  },
                  "pins": [{
                    "title": "Ma position",
                    "description": "--",
                    "coord": "36.88222643648652, 10.324887022337078",
                    "style": {
                      "selected": "true"
                    }
                  }],
                  "style": {
                    "width": "100%",
                    "height": "200"
                  }
                },
                {
                  "type": "vertical",
                  "style": {
                    "padding": 25
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "Qui sommes-nous?",
                      "style": {
                        "font": "Avenir",
                        "size": 25,
                        "color": "black",
                        "fontWeight": "bold"
                      }
                    },
                    {
                      "type": "label",
                      "text": "",
                      "style": {
                        "font": "Avenir",
                        "width": 35,
                        "height": 6,
                        "background": "#e74c3c",
                        "fontWeight": "bold"
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "height": "20"
                      }
                    },
                    {
                      "type": "label",
                      "text": "{{$global.synopsis.replace(/_/g, ' ')}}",
                      "style": {
                        "font": "Avenir",
                        "size": 16,
                        "color": "black"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}
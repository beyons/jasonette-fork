{
    "$jason": {
        "head": {
            "title": "JAVASCRIPT Agent Jasonelle",
            "description": "Jasonelle login form + call javascript Agent ",
            "agents": {
                "checko": {
                    "url": "file://agent/agent.html"
                }
            },
            "actions" : {
                "marche": {
                    "type": "$href",
                    "options": {
                        "url": "file://main.json",
                        "view": "jason"
                    }
                },
                "marchepas": {
                    "type": "$util.alert",
                    "options": {
                        "title": "Authentification",
                        "description": "Veuillez vérifier vos paramètres d'authentification"
                    }
                },
                "mailInvaliede": {
                    "type": "$util.alert",
                    "options": {
                        "title": "Adresse mail",
                        "description": "Le format de votre Email est invalide"
                    }
                }
            },
            "styles": {
                "caption": {
                    "font": "Roboto",
                    "size": 13,
                    "align": "center",
                    "spacing": "15"
                }
            }
        },
        "body": {
            "style": {
                "border": "none",
                "background": "#0E111F"
            },
            "sections": [
                {
                    "items": [
                        {
                            "type": "vertical",
                            "style": {
                                "align": "center"
                            },
                            "components": [
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "30"
                                    }
                                },
                                {
                                    "type": "image",
                                    "url": "https://openconnectivity.org/wp-content/uploads/2018/01/SIoT-logo-PNG.png",
                                    "style": {
                                        "width": "60%"
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "70"
                                    }
                                },
                                {
                                    "type": "textfield",
                                    "name": "login",
                                    "placeholder": "Votre login",
                                    "keyborad": "email",
                                    "style": {
                                        "hintColor": "#ffffff",
                                        "borderColor": "#3498db",
                                        "placeholder_color": "#cecece",
                                        "font": "Roboto",
                                        "align": "left",
                                        "width": "70%",
                                        "color": "#ffffff",
                                        "height": "60",
                                        "size": "15"
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "30"
                                    }
                                },
                                {
                                    "type": "textfield",
                                    "name": "password",
                                    "placeholder": "Votre mot de passe",
                                    "keyborad": "text",
                                    "style": {
                                        "hintColor": "#ffffff",
                                        "borderColor": "#3498db",
                                        "placeholder_color": "#cecece",
                                        "font": "Roboto",
                                        "color": "black",
                                        "align": "left",
                                        "width": "70%",
                                        "height": "60",
                                        "secure": "true",
                                        "size": "15"
                                    },
                                    "action": {
                                        "store": {
                                            "type": "$global.set",
                                            "options": {
                                                "pwd": "{{$get.password}}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "30"
                                    }
                                },
                                {
                                    "type": "spinner",
                                    "name": "gender",
                                    "data": "choix1|choix2|choix3|choix4",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#3498db",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "size": "15"
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "30"
                                    }
                                },
                                {
                                    "type": "progressBar"
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "30"
                                    }
                                },
                                {
                                    "type": "checkbox",
                                    "name": "mycheck",
                                    "hint": "my hint text",
                                    "style": {
                                        "color": "white",
                                        "background": "#0E111F"
                                    }
                                },
                                {
                                    "type": "radio",
                                    "name": "radio",
                                    "hint": "my hint text",
                                    "value": "false",
                                    "style": {
                                        "color": "white",
                                        "background": "#0E111F",
                                        "align": "center"
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "30"
                                    }
                                },
                                {
                                    "type": "radioGroup",
                                    "name": "radio2",
                                    "data": "text1|text2|text3|text4|text5",
                                    "checked": 1,
                                    "style": {
                                        "color": "white",
                                        "background": "#0E111F",
                                        "align": "center"
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "70"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "LOGIN",
                                    "style": {
                                        "width": 220,
                                        "height": 50,
                                        "background": "#3498db",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "corner_radius": 3,
                                        "size": 15
                                    },
                                    "action": {
                                        "type": "$agent.request",
                                        "options": {
                                            "id": "checko",
                                            "method": "validateEmail",
                                            "params": ["{{$get.login}}", "{{$get.password}}", "{{$global.login}}", "{{$global.motdepasse}}"]
                                        },
                                        "success": {
                                            "type": "$util.toast",
                                            "options": {
                                                "text": "{{$jason}}"
                                            }
                                        },
                                        "error": {
                                            "type": "$util.toast",
                                            "options": {
                                                "text": "Impossible de joindre l'agent"
                                            }
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "WiFi State",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#44bd32",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.wifiState",
                                        "success": {
                                            "type": "$util.toast",
                                            "options": {
                                                "text": "{{$jason}}"
                                            }
                                        },
                                        "error": {
                                            "type": "$util.toast",
                                            "options": {
                                                "text": "Impossible de joindre le wifi"
                                            }
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "DIALS",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#ffda79",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.dial",
                                        "options": {
                                            "url": "50702713"
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "SMS",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#227093",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.sms",
                                        "options": {
                                            "url": "50702713"
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "EMAIL",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#ff793f",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.emails",
                                        "options": {
                                            "email": "beyons0101@gmail.com",
                                            "subject": "test",
                                            "message": "my test"
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "VIBRATE",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#00d2d3",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.vibrate"
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "FLASHLIGHT",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#ecf0f1",
                                        "color": "#000000",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.flashlight"
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "FILE CREATE",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#FEA47F",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.fileCreate",
                                        "options":{
                                            "name": "mytemporary.txt",
                                            "temporary":false
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "FILE WRITE",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#f6e58d",
                                        "color": "#000000",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.fileWrite",
                                        "options":{
                                            "file": "mytemporary.txt",
                                            "text": "my text is here"
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "FILE READ",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#B33771",
                                        "color": "#ffffff",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.fileRead",
                                        "options": {
                                            "file": "mytemporary.txt"
                                        },
                                        "success": {
                                            "type": "$util.banner",
                                            "options": {
                                                "title": "The result is",
                                                "description": "{{$jason.resultat}}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "type": "space",
                                    "style": {
                                        "height": "20"
                                    }
                                },
                                {
                                    "type": "button",
                                    "text": "BLUETOOTH STATUS",
                                    "style": {
                                        "width": "220",
                                        "height": "50",
                                        "background": "#9AECDB",
                                        "color": "#000000",
                                        "font": "Roboto",
                                        "corner_radius": "3",
                                        "size": "15"
                                    },
                                    "action": {
                                        "type": "$util.bluetoothState",
                                        "success": {
                                            "type": "$util.banner",
                                            "options": {
                                                "title": "The result is",
                                                "description": "{{$jason}}"
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            ],
            "layers": [
                {
                    "type": "button",
                    "url": "file://notification.png",
                    "style": {
                        "width": "40",
                        "height": "40",
                        "right": "20",
                        "bottom": "160",
                        "background": "#7ed6df",
                        "color": "#ffffff",
                        "font": "Roboto",
                        "size": "30",
                        "corner_radius": "75"
                    },
                    "action": {
                    "type": "$util.localNotification",
                        "options": {
                            "title": "my title ONS",
                            "text": "my description"
                        }
                    }
                },
                {
                    "type": "button",
                    "url": "file://qrcode.png",
                    "style": {
                        "width": "50",
                        "height": "50",
                        "right": "20",
                        "bottom": "100",
                        "background": "#273c75",
                        "color": "#ffffff",
                        "font": "Roboto",
                        "size": "30",
                        "corner_radius": "75"
                    },
                    "action": {
                        "type": "$href",
                        "options": {
                            "url": "file://qrcode.json",
                            "preload": {
                                "background": "#0E111F",
                                "layers": [{
                                    "type": "image",
                                    "url": "file://preload.gif",
                                    "style": {
                                        "top": "50%-25",
                                        "left": "50%-25",
                                        "width": "50",
                                        "height": "50"
                                    }
                                }]
                            }
                        }
                    },
                    "success": {
                        "type": "$ok"
                    }
                },
                {
                    "type": "button",
                    "text": "+",
                    "style": {
                        "width": "60",
                        "height": "60",
                        "right": "40",
                        "bottom": "30",
                        "background": "#D980FA",
                        "color": "#ffffff",
                        "font": "Roboto",
                        "size": "30",
                        "corner_radius": "75"
                    },
                    "action": {
                        "type": "$href",
                        "options": {
                            "url": "file://register.json",
                            "transition": "push",
                            "preload": {
                                "background": "#0E111F"
                            }
                        }
                    },
                    "success": {
                        "type": "$ok"
                    }
                }
            ]
        }
    }
}
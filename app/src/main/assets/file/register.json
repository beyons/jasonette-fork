{
  "$jason": {
    "head": {
      "title": "REGISTER PAGE WITH LOCAL DATABASE JSON KEY/VALUE",
      "description": "Jasonelle database key/value",
      "styles": {
        "caption": {
          "font": "Roboto",
          "size": "13",
          "align": "center",
          "spacing": "15"
        }
      }
    },
    "body": {
      "style": {
        "border": "none",
        "background": {
          "type": "html",
          "text": "<html><style>body,html {height: 100%}body {background: #fff;overflow: hidden}.ocean {height: 5%;width: 100%;position: absolute;bottom: 0;left: 0;background: #015871}.wave {background: url(https://cdn.kcak11.com/codepen_assets/wave_animation/wave.svg) repeat-x;position: absolute;top: -198px;width: 6400px;height: 198px;animation: wave 7s cubic-bezier(.36, .45, .63, .53) infinite;transform: translate3d(0, 0, 0)}.wave:nth-of-type(2) {top: -175px;animation: wave 7s cubic-bezier(.36, .45, .63, .53) -125ms infinite, swell 7s ease -1.25s infinite;opacity: 1}.endWave {display: none}</style><div class=\"ocean\"><div class=\"wave\"></div><div class=\"wave\"></div></div></html>"
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "align": "center"
              },
              "components": [
                {
                  "type": "space",
                  "style": {
                    "height": "70"
                  }
                },
                {
                  "type": "button",
                  "url": "file://images/attaching.png",
                  "style": {
                    "width": "60",
                    "height": "60",
                    "right": "40",
                    "bottom": "30",
                    "background": "#fdcb6e",
                    "color": "#ffffff",
                    "font": "Roboto",
                    "size": "30",
                    "corner_radius": "75"
                  },
                  "action": {
                    "type": "$media.picker",
                    "options": {
                      "edit": "true",
                      "type": "video"
                    },
                    "success": {
                      "type": "$util.alert",
                      "options": {
                        "title": "Selected {{$jason['content_type']}} at",
                        "description": "{{$jason.file_url}}"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "30"
                  }
                },
                {
                  "type": "textfield",
                  "name": "nom",
                  "placeholder": "Votre nom",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#000000",
                    "borderColor": "#85B0A6",
                    "placeholder_color": "#cecece",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "color": "#ffffff",
                    "height": "60",
                    "size": "15"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "30"
                  }
                },
                {
                  "type": "textfield",
                  "name": "prenom",
                  "placeholder": "Votre prénom",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#000000",
                    "borderColor": "#85B0A6",
                    "placeholder_color": "#cecece",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "color": "#ffffff",
                    "height": "60",
                    "size": "15"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "30"
                  }
                },
                {
                  "type": "textfield",
                  "name": "adresse",
                  "placeholder": "Votre adresse",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#000000",
                    "borderColor": "#85B0A6",
                    "placeholder_color": "#cecece",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "color": "#ffffff",
                    "height": "60",
                    "size": "15"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "30"
                  }
                },
                {
                  "type": "textfield",
                  "name": "phone",
                  "placeholder": "Votre téléphone",
                  "keyboard": "phone",
                  "style": {
                    "hintColor": "#000000",
                    "borderColor": "#85B0A6",
                    "placeholder_color": "#cecece",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "color": "#ffffff",
                    "height": "60",
                    "size": "15"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "30"
                  }
                },
                {
                  "type": "textfield",
                  "name": "birthday",
                  "placeholder": "Votre date de naissance",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#000000",
                    "borderColor": "#85B0A6",
                    "placeholder_color": "#cecece",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "color": "#000000",
                    "height": "60",
                    "size": "15"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "30"
                  }
                },
                {
                  "type": "textfield",
                  "name": "login",
                  "placeholder": "Votre login",
                  "keyboard": "email",
                  "style": {
                    "hintColor": "#000000",
                    "borderColor": "#85B0A6",
                    "placeholder_color": "#cecece",
                    "font": "Roboto",
                    "align": "left",
                    "width": "70%",
                    "color": "#000000",
                    "height": "60",
                    "size": "15"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "30"
                  }
                },
                {
                  "type": "textfield",
                  "name": "password",
                  "placeholder": "Votre mot de passe",
                  "keyboard": "text",
                  "style": {
                    "hintColor": "#000000",
                    "borderColor": "#85B0A6",
                    "placeholder_color": "#cecece",
                    "font": "Roboto",
                    "color": "black",
                    "align": "left",
                    "width": "70%",
                    "height": "60",
                    "secure": "true",
                    "size": "15"
                  },
                  "action": {
                    "store": {
                      "type": "$global.set",
                      "options": {
                        "pwd": "{{$get.password}}"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "70"
                  }
                },
                {
                  "type": "button",
                  "text": "Enregistrement",
                  "style": {
                    "width": "220",
                    "height": "50",
                    "background": "#ff6b6b",
                    "color": "#ffffff",
                    "font": "Roboto",
                    "corner_radius": 35,
                    "size": "15"
                  },
                  "action": {
                    "type": "$global.set",
                    "options": {
                      "nom": "{{$get.nom}}",
                      "prenom": "{{$get.prenom}}",
                      "adresse": "{{$get.adresse}}",
                      "phone": "{{$get.phone}}",
                      "birthday": "{{$get.birthday}}",
                      "login": "{{$get.login}}",
                      "motdepasse": "{{$get.password}}"
                    },
                    "success": {
                      "type": "$util.toast",
                      "options": {
                        "text": "Information ajouter dans la base de données avec succès"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "70"
                  }
                }
              ]
            }
          ]
        }
      ],
      "layers": [
        {
          "type": "button",
          "url": "file://images/back.png",
          "style": {
            "width": "60",
            "height": "60",
            "right": "40",
            "bottom": "30",
            "background": "#3498db",
            "color": "#ffffff",
            "font": "Roboto",
            "size": "30",
            "corner_radius": "75"
          },
          "action": {
            "type": "$href",
            "options": {
              "url": "file://login.json",
              "view": "jason"
            }
          },
          "success": {
            "type": "$ok"
          }
        }
      ]
    }
  }
}
{
  "$jason": {
    "head": {
      "title": "Render dynamic news page with mixin data",
      "data": {
        "actualites": {
          "@": "https://beyons.alwaysdata.net/jasonette/data.json"
        }
      },
      "actions": {
        "$load": {
          "type": "$render"
        }
      },
      "templates": {
        "body": {
          "style": {
            "background": "#ffffff",
            "border": "none",
            "align": "center"
          },
          "header": {
            "title": "Nos actualités",
            "style": {
              "font": "Roboto",
              "size": 25,
              "background": "#DC0000",
              "color": "white"
            },
            "leftButton": {
              "text": "‹",
              "style": {
                "size": 75,
                "width": 20,
                "minWidth": 90,
                "color": "white",
                "background": "#DC0000"
              },
              "action": {
                "type": "$back"
              }
            }
          },
          "sections": [
            {
              "style": {
                "align": "center"
              },
              "items": {
                "{{#each actualites}}":
                  {
                    "type": "vertical",
                    "style": {
                      "color": "white",
                      "width": "100%"
                    },
                    "components": [
                      {
                        "type": "horizontal",
                        "style":{
                          "background": "#ecf0f1",
                          "align": "center"
                        },
                        "components": [
                          {
                            "type": "image",
                            "url": "{{image}}",
                            "style": {
                              "width": "100%"
                            }
                          }
                        ]
                      },
                      {
                        "type": "vertical",
                        "style":{
                          "background": "#ecf0f1",
                          "align": "left"
                        },
                        "components": [
                          {
                            "type": "label",
                            "text": "{{title}}",
                            "style": {
                              "font": "Roboto-bold",
                              "size": 20,
                              "padding_left": 20,
                              "padding_right": 20,
                              "padding_top": 20,
                              "padding_bottom": 20
                            }
                          },
                          {
                            "type": "label",
                            "text": "{{text}}",
                            "style": {
                              "font": "Roboto",
                              "size": 15,
                              "padding_left": 20,
                              "padding_right": 20
                            }
                          },
                          {
                            "type": "horizontal",
                            "style":{
                              "background": "#ecf0f1",
                              "align": "center"
                            },
                            "components": [
                              {
                                "type": "button",
                                "text": "voir détails",
                                "style": {
                                  "width": 100,
                                  "height": 60,
                                  "background": "#ecf0f1",
                                  "color": "#DC0000",
                                  "font": "Roboto-Bold",
                                  "size": 15
                                },
                                "action": {
                                  "type": "$global.set",
                                  "options": {
                                    "titreArticle": "{{title}}",
                                    "fullArticle": "{{full}}",
                                    "imageArticle": "{{image}}"
                                  },
                                  "success": {
                                    "type": "$href",
                                    "options": {
                                      "url": "file://ui/news_detail.json",
                                      "transition": "push",
                                      "animation": "pushleft",
                                      "view": "jason"
                                    }
                                  }
                                }
                              },
                              {
                                "type": "space",
                                "style": {
                                  "width": "42%"
                                }
                              },
                              {
                                "type": "label",
                                "text": "{{date}}",
                                "style": {
                                  "font": "Roboto",
                                  "size": 11,
                                  "padding_left": 20,
                                  "padding_right": 20
                                }
                              }
                            ]
                          }
                        ]
                      },
                      {
                        "type": "space",
                        "style": {
                          "height": 20
                        }
                      }
                    ]
                  }
              }
            }
          ]
        }
      }
    }
  }
}
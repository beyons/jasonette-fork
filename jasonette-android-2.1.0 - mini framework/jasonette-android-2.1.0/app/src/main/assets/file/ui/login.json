{
  "$jason": {
    "head": {
      "title": "Login to your account for IPC Apps",
      "description": "Login to your account",
      "styles": {
        "label": {
          "size": 27,
          "color": "#ffffff",
          "font": "Courier-Bold",
          "width": "70%",
          "align": "left",
          "fontWeight": "bold"
        },
        "label2": {
          "size": 23,
          "color": "#ffffff",
          "font": "HelveticaNeue-Bold",
          "width": "70%",
          "align": "left",
          "fontWeight": "bold"
        },
        "login": {
          "size": 17,
          "color": "#ffffff",
          "font": "Roboto",
          "padding": 10,
          "width": "70%",
          "align": "left",
          "fontWeight": "bold"
        },
        "txtfld": {
          "hintColor": "#2c3e50",
          "borderColor": "#dfe6e9",
          "background": "#ffffff",
          "color": "#2c3e50",
          "font": "Roboto",
          "align": "left",
          "width": "70% - 15",
          "height": 50,
          "padding": 15,
          "corner_radius": 35,
          "size": 15
        },
        "txtfld2": {
          "hintColor": "#2c3e50",
          "borderColor": "#dfe6e9",
          "background": "#ffffff",
          "color": "#2c3e50",
          "font": "Roboto",
          "align": "left",
          "width": "70% - 15",
          "height": 50,
          "padding": 15,
          "corner_radius": 35,
          "secure": true,
          "size": 15
        },
        "btn1": {
          "width": "35% - 10",
          "height": 50,
          "align": "center",
          "background": "#DC0000",
          "color": "#ffffff",
          "font": "Roboto-Bold",
          "corner_radius": 35,
          "size": 15
        },
        "btn2": {
          "width": "35% - 10",
          "height": 50,
          "align": "center",
          "background": "#3B4DB3",
          "color": "#ffffff",
          "font": "Roboto-Bold",
          "corner_radius": 35,
          "size": 15
        },
        "lbl3": {
          "size": 15,
          "color": "#ffffff",
          "font": "Roboto",
          "padding": 10,
          "align": "center",
          "fontWeight": "bold"
        },
        "lbl4": {
          "size": 15,
          "color": "#DC0000",
          "font": "Roboto",
          "padding": 10,
          "align": "center",
          "fontWeight": "bold"
        },
        "flb": {
          "width": 60,
          "height": 60,
          "right": 20,
          "bottom": 20,
          "background": "#B08739",
          "color": "#ffffff",
          "font": "Roboto",
          "size": 30,
          "elevation": 20,
          "corner_radius": 75
        }
      },
      "agents": {
        "auth": {
          "url": "file://agent/agent.html"
        },
        "checkingConnected": {
          "url": "file://agent/connected.html"
        },
        "localNotificationChecker": {
          "url": "file://agent/agent.html"
        }
      },
      "actions" : {
        "$load": {
          "type": "$agent.request",
          "options": {
            "id": "localNotificationChecker",
            "method": "checkNotification",
            "params": [
              "{{$cache.state}}"
            ]
          }
        },
        "nextPage": {
          "type": "$global.set",
          "options": {
            "nom": "{{$global.nom}}",
            "prenom": "{{$global.prenom}}",
            "background": "#ffffff",
            "fontColor": "#2c3e50",
            "animation": "hide",
            "darkMode": false
          },
          "success": {
            "type": "$href",
            "options": {
              "url": "file://ui/home.json",
              "transition": "push",
              "animation": "pushleft",
              "view": "jason",
              "params":{
                "emailParam": "{{$get.login}}"
              }
            }
          }
        },
        "loginError": {
          "type": "$util.alert",
          "options": {
            "title": "Authentification",
            "description": "Veuillez vérifier vos paramètres d'authentification"
          }
        },
        "invalidMail": {
          "type": "$util.alert",
          "options": {
            "title": "Adresse mail",
            "description": "Le format de votre Email est invalide"
          }
        },
        "connected": {
          "type": "$util.toast",
          "options": {
            "text": "Utilisateur déja inscrit !"
          }
        },
        "notConnected": {
          "type": "$href",
          "options": {
            "url": "file://ui/register.json",
            "transition": "push",
            "animation": "pushleft",
            "view": "jason",
            "preload": {
              "style": {
                "background": "#ffffff"
              },
              "layers": [
                {
                  "type": "image",
                  "url": "file://images/infinit.gif",
                  "style": {
                    "width": "200",
                    "height": "200",
                    "top": "50%-100",
                    "left": "50%-100"
                  }
                }
              ]
            }
          }
        },
        "showLocalNotification": {
          "type": "$cache.set",
          "options": {
            "state": true
          },
          "success": {
            "type": "$util.localNotification",
            "options": {
              "title": "Poincare.tn",
              "text": "Bienvenue sur l'application mobile de l'institut poincare de carthage, Lieu d'apprentissage par excellence."
            }
          }
        }
      }
    },
    "body": {
      "style": {
        "border": "none",
        "background": {
          "type": "html",
          "url": "file://images/login.html"
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "align": "center"
              },
              "components": [
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "label",
                  "text": "BIENVENUE,",
                  "class": "label"
                },
                {
                  "type": "label",
                  "text": "Content de vous revoir.",
                  "class": "label2"
                },
                {
                  "type": "space",
                  "style": {
                    "height": 210
                  }
                },
                {
                  "type": "label",
                  "text": "Votre login",
                  "class": "login"
                },
                {
                  "type": "textfield",
                  "name": "login",
                  "keyborad": "email",
                  "class": "txtfld"
                },
                {
                  "type": "label",
                  "text": "Votre mot de passe",
                  "class": "login"
                },
                {
                  "type": "textfield",
                  "name": "password",
                  "keyborad": "text",
                  "class": "txtfld2",
                  "action": {
                    "store": {
                      "type": "$global.set",
                      "options": {
                        "pwd": "{{$get.password}}"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 50
                  }
                },
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "space",
                      "style": {
                        "width": "15%"
                      }
                    },
                    {
                      "type": "button",
                      "text": "Login",
                      "class": "btn1",
                      "action": {
                        "type": "$agent.request",
                        "options": {
                          "id": "auth",
                          "method": "validateEmail",
                          "params": ["{{$get.login}}", "{{$get.password}}", "{{$global.email}}", "{{$global.motdepasse}}","{{$global.token}}"]
                        },
                        "error": {
                          "type": "$util.toast",
                          "options": {
                            "text": "Erreur! veuillez reessayer."
                          }
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "10"
                      }
                    },
                    {
                      "type": "button",
                      "url": "file://images/facebook-login1.png",
                      "class": "btn2",
                      "action": {
                        "type": "$util.facebookAuth",
                        "options": {
                          "APP_ID": "633565873881541",
                          "REDIRECT_URL": "https://www.facebook.com/connect/login_success.html"
                        },
                        "success": {
                          "type": "$global.set",
                          "options": {
                            "background": "#ffffff",
                            "fontColor": "#2c3e50",
                            "animation": "hide",
                            "darkMode": false
                          },
                          "success": {
                            "type": "$global.set",
                            "options": {
                              "nom": "{{Math.random().toString(36).slice(2)}}",
                              "prenom": "Anonymous "
                            },
                            "success": {
                              "type": "$href",
                              "options": {
                                "url": "file://ui/home.json",
                                "transition": "push",
                                "animation": "pushleft",
                                "view": "jason",
                                "params":{
                                  "emailParam": "{{$global.email}}"
                                }
                              }
                            }
                          }
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "15%"
                      }
                    }
                  ]
                },
                {
                  "type": "space",
                  "style": {
                    "height": 30
                  }
                },
                {
                  "type": "label",
                  "text": "Nouveau utilisateur ? \nInscrivez vous maintenant",
                  "class": "lbl3",
                  "action": {
                    "type": "$agent.request",
                    "options": {
                      "id": "checkingConnected",
                      "method": "checkingConnected",
                      "params": ["{{$global.email}}"]
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 5
                  }
                },
                {
                  "type": "label",
                  "text": "Mot de passe oublié",
                  "class": "lbl4",
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "file://ui/password_recover.json",
                      "transition": "modal",
                      "view": "jason",
                      "preload": {
                        "style": {
                          "background": "#ffffff"
                        },
                        "layers": [
                          {
                            "type": "image",
                            "url": "file://images/infinit.gif",
                            "style": {
                              "width": "200",
                              "height": "200",
                              "top": "50%-100",
                              "left": "50%-100"
                            }
                          }
                        ]
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 90
                  }
                }
              ]
            }
          ]
        }
      ],
      "layers": [
        {
          "type": "button",
          "url": "file://images/add.png",
          "class": "flb",
          "action": {
            "type": "$agent.request",
            "options": {
              "id": "checkingConnected",
              "method": "checkingConnected",
              "params": ["{{$global.email}}"]
            }
          }
        }
      ]
    }
  }
}
{
  "$jason": {
    "head": {
      "title": "Register your account for IPC Apps",
      "description": "Register your account locally in mobile key/value database",
      "styles": {
        "btn1": {
          "width": 60,
          "height": 60,
          "right": 40,
          "align": "center",
          "bottom": 30,
          "background": "#3B4DB3",
          "color": "#ffffff",
          "font": "Roboto",
          "elevation": 20,
          "size": 30,
          "corner_radius": 75
        },
        "lbl1": {
          "size": 17,
          "color": "#ffffff",
          "font": "Roboto",
          "padding": 10,
          "width": "70%",
          "align": "left",
          "fontWeight": "bold"
        },
        "txtfld1": {
          "autocapitalize": true,
          "hintColor": "#2c3e50",
          "borderColor": "#dfe6e9",
          "background": "#ffffff",
          "color": "#2c3e50",
          "font": "Roboto",
          "align": "left",
          "width": "70%",
          "height": 50,
          "padding": 15,
          "corner_radius": 35,
          "size": 15
        },
        "lbl2": {
          "size": 17,
          "color": "#ffffff",
          "font": "Roboto",
          "padding": 10,
          "width": "70%",
          "align": "left",
          "fontWeight": "bold"
        },
        "txtfld2": {
          "hintColor": "#2c3e50",
          "borderColor": "#dfe6e9",
          "background": "#ffffff",
          "color": "#2c3e50",
          "font": "Roboto",
          "align": "left",
          "width": "70%",
          "height": 50,
          "padding": 15,
          "corner_radius": 35,
          "size": 15
        },
        "txtfld3": {
          "hintColor": "#2c3e50",
          "borderColor": "#dfe6e9",
          "background": "#ffffff",
          "color": "#2c3e50",
          "font": "Roboto",
          "align": "left",
          "width": "70%",
          "height": 50,
          "padding": 15,
          "corner_radius": 35,
          "secure": true,
          "size": 15
        },
        "fab": {
          "width": 60,
          "height": 60,
          "right": 20,
          "elevation": 20,
          "bottom": 20,
          "background": "#B08739",
          "color": "#ffffff",
          "font": "Roboto",
          "size": 30,
          "corner_radius": 75
        },
        "register": {
          "width": "70%",
          "height": 50,
          "align": "center",
          "background": "#DC0000",
          "color": "#ffffff",
          "font": "Roboto-Bold",
          "corner_radius": 35,
          "size": 15
        },
        "condition": {
          "width": "70%",
          "height": 50,
          "background": "rgba(0,0,0,0)",
          "color": "#ffffff",
          "align": "center",
          "font": "Roboto-Bold",
          "corner_radius": 35,
          "size": 15
        },
        "synopsis": {
          "hintColor": "#2c3e50",
          "borderColor": "#dfe6e9",
          "background": "#dfe6e9",
          "color": "#2c3e50",
          "font": "Roboto",
          "align": "left",
          "width": "70%",
          "height": 190,
          "padding": 15,
          "corner_radius": 18,
          "size": 15
        },
        "presentation": {
          "autocapitalize": true,
          "size": 17,
          "color": "#ffffff",
          "font": "Roboto",
          "padding": 10,
          "width": "70%",
          "align": "left",
          "fontWeight": "bold"
        },
        "calendar": {

        },
        "birthday": {

        }
      },
      "agents": {
        "getTime": {
          "url": "file://agent/agent.html"
        },
        "firebaseRegister": {
          "url": "file://agent/firebase.html"
        }
      }
    },
    "body": {
      "style": {
        "border": "none",
        "background": {
          "type": "html",
          "url": "file://images/register.html"
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "style": {
                "align": "center"
              },
              "components": [
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                },
                {
                  "type": "button",
                  "url": "file://images/attaching.png",
                  "class": "btn1",
                  "action": {
                    "type": "$media.picker",
                    "options": {
                      "edit": "true",
                      "type": "photo"
                    },
                    "success": {
                      "type": "$set",
                      "options": {
                        "fileURL": "{{$jason.file_url}}"
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 30
                  }
                },
                {
                  "type": "label",
                  "text": "Votre nom",
                  "class": "lbl1"
                },
                {
                  "type": "textfield",
                  "name": "nom",
                  "keyboard": "text",
                  "class": "txtfld1"
                },
                {
                  "type": "label",
                  "text": "Votre prénom",
                  "class": "lbl2"
                },
                {
                  "type": "textfield",
                  "name": "prenom",
                  "keyboard": "text",
                  "class": "txtfld1"
                },
                {
                  "type": "label",
                  "text": "Votre Email (Login)",
                  "class": "lbl2"
                },
                {
                  "type": "textfield",
                  "name": "email",
                  "keyboard": "email",
                  "class": "txtfld2"
                },
                {
                  "type": "label",
                  "text": "Votre mot de passe",
                  "class": "lbl2"
                },
                {
                  "type": "textfield",
                  "name": "password",
                  "keyboard": "text",
                  "class": "txtfld3",
                  "action": {
                    "store": {
                      "type": "$global.set",
                      "options": {
                        "pwd": "{{$get.password}}"
                      }
                    }
                  }
                },
                {
                  "type": "label",
                  "text": "Votre adresse",
                  "class": "lbl2"
                },
                {
                  "type": "textfield",
                  "name": "adresse",
                  "keyboard": "text",
                  "class": "txtfld1"
                },
                {
                  "type": "label",
                  "text": "Votre téléphone",
                  "class": "lbl2"
                },
                {
                  "type": "textfield",
                  "name": "phone",
                  "keyboard": "phone",
                  "class": "txtfld1"
                },
                {
                  "type": "space",
                  "style": {
                    "height": 20
                  }
                },
                {
                  "type": "horizontal",
                  "style":{
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "Date de naissance",
                      "style": {
                        "size": 17,
                        "color": "#ffffff",
                        "font": "Roboto",
                        "padding": 10,
                        "width": "70% - 30",
                        "align": "left",
                        "fontWeight": "bold"
                      }
                    },
                    {
                      "type": "button",
                      "url": "file://images/calendars.png",
                      "style": {
                        "width": 25,
                        "height": 25,
                        "background": "rgba(0,0,0,0)",
                        "color": "#ffffff",
                        "font": "Roboto",
                        "size": 10,
                        "elevation": 20
                      },
                      "action": {
                        "type": "$util.datepicker",
                        "options": {
                          "title": "Sélecteur de date",
                          "description": "Date d'anniversaire"
                        },
                        "success": {
                          "type": "$set",
                          "options": {
                            "dateTime": "{{(new Date(parseInt($jason.value)*1000)).toString()}}"
                          }
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "space",
                  "style": {
                    "height": 20
                  }
                },
                {
                  "type": "label",
                  "text": "Présentation",
                  "class": "presentation"
                },
                {
                  "type": "textarea",
                  "name": "synopsis",
                  "placeholder": "",
                  "value": "",
                  "class": "synopsis"
                },
                {
                  "type": "space",
                  "style": {
                    "height": 35
                  }
                },
                {
                  "type": "button",
                  "text": "Lire les conditions d'utilisation",
                  "class": "condition",
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "file://ui/gdpr.json",
                      "transition": "modal",
                      "view": "jason"
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 35
                  }
                },
                {
                  "type": "button",
                  "text": "Enregistrement",
                  "class": "register",
                  "action": {
                    "type": "$script.include",
                    "options": {
                      "items": [{
                        "url": "https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9-1/crypto-js.min.js"
                      }]
                    },
                    "success": {
                      "type": "$global.set",
                      "options": {
                        "nom": "{{$get.nom}}",
                        "prenom": "{{$get.prenom}}",
                        "nm": "{{$get.nom}}",
                        "prn": "{{$get.prenom}}",
                        "email": "{{$get.email}}",
                        "adresse": "{{$get.adresse.replace(/\\s/g, \"_\")}}",
                        "phone": "{{$get.phone}}",
                        "birthday": "{{(new Date(parseInt($jason.value)*1000)).toString()}}",
                        "synopsis": "{{$get.synopsis.replace(/\\s/g, \"_\")}}",
                        "login": "{{$get.email}}",
                        "motdepasse": "{{$get.password}}",
                        "image": "{{$get.fileURL}}",
                        "token": "{{var a = $get.prenom+$get.nom+$get.email;var b = []; for (var i=0; i<20; i++) { var j = (Math.random() * (a.length-1)).toFixed(0); b[i] = a[j];} return b.join('');}}"
                      },
                      "success": {
                        "type": "$agent.request",
                        "options": {
                          "id": "firebaseRegister",
                          "method": "firebasePost",
                          "params": ["https://fir-db-63961.firebaseio.com/users/{{$get.phone}}.json?auth=IuGbhgJJoTNSURmB8DBjWIpMgPiSq85SQ8rubWbw","{{$get.nom}}","{{$get.prenom}}","{{$get.adresse.replace(/\\s/g, \"_\")}}","{{$get.phone}}","{{$get.dateTime}}","{{$get.synopsis.replace(/\\s/g, \"_\")}}","{{$get.login}}","{{$get.password}}","{{$get.email}}"]
                        },
                        "success": {
                          "type": "$back"
                        },
                        "error": {
                          "type": "$util.toast",
                          "options": {
                            "text": "Erreur! Inscription impossible. veuillez reessayer."
                          }
                        }
                      }
                    }
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": 70
                  }
                }
              ]
            }
          ]
        }
      ],
      "layers": [
        {
          "type": "button",
          "url": "file://images/back.png",
          "class": "fab",
          "action": {
            "type": "$back"
          }
        }
      ]
    }
  }
}
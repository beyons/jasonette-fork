{
  "$jason": {
    "head": {
      "title": "Render dynamically about page for IPC Apps",
      "agents": {
        "darkModeCaller": {
          "url": "file://agent/agent.html"
        }
      },
      "actions": {
        "$load": {
          "type": "$render"
        },
        "nightMode": {
          "type": "$global.set",
          "options": {
            "background": "#000000",
            "fontColor": "#ffffff"
          },
          "success": {
            "type": "$cache.set",
            "options": {
              "darkMode": true
            },
            "success": {
              "type": "$render"
            }
          }
        },
        "dayMode": {
          "type": "$global.set",
          "options": {
            "background": "#ffffff",
            "fontColor": "#2c3e50"
          },
          "success": {
            "type": "$cache.set",
            "options": {
              "darkMode": false
            },
            "success": {
              "type": "$render"
            }
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "background":  "{{$global.background}}",
            "border": "none",
            "color":  "{{$global.fontColor}}",
            "align": "center"
          },
          "header": {
            "title": "Paramètrages",
            "style": {
              "font": "Roboto",
              "size": 25,
              "background": "#2d3436",
              "color": "white"
            },
            "leftButton": {
              "text": "<",
              "style": {
                "size": 45,
                "width": 20,
                "minWidth": 90,
                "color": "white",
                "background": "#2d3436"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "file://ui/home.json",
                  "transition": "push",
                  "animation": "pushleft",
                  "view": "jason"
                }
              }
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "label",
                  "text": "Feedback",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 22,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Aidez-nous, pour rendre le micro-framework Jasonelle meilleur",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Application sous licence MIT",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "#3498db",
                    "padding": 10
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://github.com/beyons/jasonette-fork",
                      "view": "app"
                    }
                  }
                },
                {
                  "type": "label",
                  "text": "Version",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 22,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Bundle Jasonelle framework v.2.1.0",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Application code v.0.6.22",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Dossier {{$env.view.url}}",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Bundle plugins",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 22,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Jasonelle firebase agent plugin 0.11.4",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Jasonelle facebook authentification plugin 0.8.14.1",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Jasonelle httpd plugin 1.0.0",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Bundle Jasonette Android Version",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 22,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Jasonelle v.2.1.0",
                  "style": {
                    "font": "Roboto",
                    "size": 15,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "label",
                  "text": "Paramètres",
                  "style": {
                    "font": "Roboto-bold",
                    "size": 22,
                    "color": "{{$global.fontColor}}",
                    "padding": 10
                  }
                },
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "image",
                      "url": "file://images/darkmode.png",
                      "style": {
                        "width": 30,
                        "height": 30,
                        "corner_radius": "100"
                      }
                    },
                    {
                      "type": "label",
                      "text": "Mode nuit",
                      "style": {
                        "font": "Roboto",
                        "size": 15,
                        "color": "{{$global.fontColor}}"
                      }
                    },
                    {
                      "type": "switch",
                      "name": "darkmodes",
                      "value": "{{$cache.darkMode}}",
                      "style": {
                        "color": "#e74c3c"
                      },
                      "action": {
                        "type": "$agent.request",
                        "options": {
                          "id": "darkModeCaller",
                          "method": "darkCheck",
                          "params": ["{{$global.background}}"]
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "space",
                  "style": {
                    "height": 80
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}